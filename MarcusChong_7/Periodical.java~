public class Periodical
{
	private String name;
	private int release;


	public Periodical()
	{
		name = "";
		release = 0;
	}
	
	public Periodical(String p_name, int p_release)
	{
		name = p_name;
		release = p_release;
	}
	
	public Periodical(Periodical p)
	{
		this(p.getName(),p.getRelease());
	}
	
	public String getName()
	{
		return name;
	}
	
	public int getRelease()
	{
		return release;
	}
	

	public void setName(String p_name)
	{
		name = p_name;
	}
	
	public void setRelease(int p_release)
	{
		release = p_release;
	}
	
	public boolean equals(Periodical p)
	{
		return ((name.equals(p.getName())) && (release == p.getRelease()));
	}
	
	public String toString()
	{
		return "Name: " + name + " Release: " + release;
	}
}
