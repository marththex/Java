public class Room
{
	private int roomNumber;
	private int capacity;
	private boolean hasCom;

	public Room()
	{
		roomNumber = 0;
		capacity= 0;
		hasCom = false;
	}
	
	public Room(int r_roomNumber, int r_capacity, boolean r_hasCom)
	{
		roomNumber = r_roomNumber;
		capacity= r_capacity;
		hasCom = r_hasCom;
	}
	
	public Room(Room r)
	{
		this(r.getRoomNumber(),r.getCapacity(),r.getHasCom());
	}
	
	public int getRoomNumber()
	{
		return roomNumber;
	}
	
	public int getCapacity()
	{
		return capacity;
	}
	
	public boolean getHasCom()
	{
		return hasCom;
	}
	
	public void setRoomNumber(int r_roomNumber)
	{
		roomNumber = r_roomNumber;
	}
	
	public void setCapasity(int r_capacity)
	{
		capacity= r_capacity;
	}
	
	public void setRuntime(boolean r_hasCom)
	{
		hasCom = r_hasCom;
	}
	
	public boolean equals(Room r)
	{
		return ((roomNumber == r.getRoomNumber()) && (capacity== r.getCapacity()) && (hasCom == r.getHasCom()));
	}
	
	public String toString()
	{
		return "Room Number: " + roomNumber + " Capacity: " + capacity+ "  Has a Computer: " + hasCom;
	}
}
